{
	"name": "acme-office-app",
	"version": "2.0.23",
	"description": "Acme Office App",
	"keywords": [
		"titanium",
		"mobile",
		"alloy",
		"turbo",
		"appcelerator",
		"axway",
		"amplify"
	],
	"bugs": {
		"url": "https://github.com/axway-developer-relation/griffin-app-opensource/issues",
		"email": "brenton.house@gmail.com"
	},
	"repository": {
		"type": "git",
		"url": "github:axway-developer-relation/griffin-app-opensource"
	},
	"license": "MIT",
	"author": {
		"name": "Brenton House",
		"email": "brenton.house@gmail.com",
		"url": "https://brenton.house"
	},
	"main": "index.js",
	"scripts": {
		"alloy": "turbo2 compile ./app --config platform=ios,version=0,simtype=none,devicefamily=universal,deploytype=development,target=simulator",
		"android": "ti build -p android --log-level trace",
		"appcenter:ios": "appcenter distribute release --file \"./dist/${npm_package_titanium_app_name}.ipa\" -R ./release-notes.md --group \"${npm_package_titanium_appcenter_ios_distribution_group}\" --app \"${npm_package_titanium_appcenter_ios_name}\"",
		"prebuild": "ti sdk install",
		"build": "npm run build:ios && npm run build:android",
		"build:android": "npm run android --build-only",
		"build:android:inhouse": "npm run clean && ti build -p android --build-only --skip-js-minify",
		"build:android:store": "npm run clean && ti build -p android --skip-js-minify --build-only --output-dir './dist' --target dist-playstore --store-password $KEYSTORE_PASSWORD --keystore ./mobile-app.keystore",
		"build:android:store2": "npm run clean && ti build -p android --build-only --output-dir './dist' --target dist-playstore --store-password $KEYSTORE_PASSWORD --keystore ./mobile-app.keystore",
		"build:ios": "npm run ios --build-only",
		"build:ios:adhoc": "${npm_package_titanium_command} build -p ios --output-dir './dist' --target dist-adhoc --distribution-name \"$npm_package_titanium_ios_distribution_name\" --pp-uuid $npm_package_titanium_provisioning_profile",
		"build:ios:inhouse": "npm run clean && ${npm_package_titanium_command} build -p ios --skip-js-minify --output-dir './dist' --target dist-adhoc --distribution-name \"$npm_package_titanium_ios_distribution_name\" --pp-uuid $npm_package_titanium_provisioning_profile",
		"build:ios:inhouse2": "npm run clean && ${npm_package_titanium_command} build -p ios --output-dir './dist' --target dist-adhoc --distribution-name \"$npm_package_titanium_ios_distribution_name\" --pp-uuid $npm_package_titanium_provisioning_profile",
		"clean": "rm -rfv build && rm -rfv i18n && rm -rfv platform && rm -rfv Resources",
		"precopy:android:inhouse": "mkdir -p \"./docs/${npm_package_titanium_app_id}/android/${npm_package_version}\" && cp \"./build/android/app/build/outputs/apk/debug/app-debug.apk\" ./docs/${npm_package_titanium_app_id}/android/${npm_package_version}/latest-zzz.apk",
		"copy:android:inhouse": "mkdir -p \"./docs/${npm_package_titanium_app_id}/android/${npm_package_version}\" && cp \"./build/android/app/build/outputs/apk/debug/app-debug.apk\"  ./docs/${npm_package_titanium_app_id}/android/latest-zzz.apk",
		"precopy:android:store": "mkdir -p \"./docs/${npm_package_titanium_app_id}/android/${npm_package_version}\" && cp \"./dist/${npm_package_titanium_app_name}.apk\" ./docs/${npm_package_titanium_app_id}/android/${npm_package_version}/install.apk",
		"copy:android:store": "mkdir -p \"./docs/${npm_package_titanium_app_id}/android/${npm_package_version}\" && cp \"./dist/${npm_package_titanium_app_name}.apk\" ./docs/${npm_package_titanium_app_id}/android/latest-beta.apk",
		"copy:ios": "mkdir -p \"./docs/${npm_package_titanium_app_id}/ios/${npm_package_version}\" && cp \"./dist/${npm_package_titanium_ipa_name}\" ./docs/${npm_package_titanium_app_id}/ios/${npm_package_version}/install.ipa",
		"copy:source": "node ./scripts/internal/distribution/copy-source.js",
		"create:appinfo:android": "node ./scripts/internal/publishing/create-appinfo-android.js ${npm_package_titanium_environment} ${npm_package_version}",
		"create:appinfo:ios": "node ./scripts/internal/publishing/create-appinfo-ios.js ${npm_package_titanium_environment} ${npm_package_version}",
		"internal:all": "npm run internal:ios:all && npm run internal:android:all",
		"internal:android": "npm run build:android:store && npm run copy:android:store && npm run create:appinfo:android",
		"internal:android:all": "npm run internal:android:prod && npm run internal:android:dev",
		"internal:android:dev": "npm run switch:dev && npm run internal:android",
		"internal:android:dev:push": "npm run internal:android:dev && bump --increment none",
		"internal:android:prod": "npm run switch:prod && npm run internal:android",
		"internal:ios": "npm run build:ios:inhouse && npm run copy:ios && npm run create:appinfo:ios",
		"internal:ios:all": "npm run internal:ios:prod && npm run internal:ios:dev",
		"internal:ios:dev": "npm run switch:dev && npm run internal:ios",
		"internal:ios:dev:push": "npm run internal:ios:dev && bump --increment none",
		"internal:ios:prod": "npm run switch:prod && npm run internal:ios",
		"ios": "${npm_package_titanium_command} build -p ios --log-level trace",
		"lint": "eslint ./app --fix",
		"print": "printenv",
		"public": "node ./scripts/internal/publishing/beta-to-public.js",
		"public:all": "npm run public:prod && npm run public:dev",
		"public:dev": "npm run switch:dev && npm run public",
		"public:prod": "npm run switch:prod && npm run public",
		"publish:ios": "bump && npm run build:ios:inhouse && npm run appcenter:ios",
		"release:ios": "hub release create -a \"./dist/${npm_package_titanium_app_name}.ipa\" --message \"Release v${npm_package_version}\" \"v$npm_package_version\"",
		"switch": "node ./scripts/internal/branding/switch-environment.js",
		"postswitch": "npm install",
		"switch:acme": "npm run switch acme",
		"switch:dev": "npm run switch dev",
		"switch:local": "npm run switch local",
		"switch:prod": "npm run switch prod",
		"test2": "copymodules . ./test2",
		"start": "npm run --"
	},
	"dependencies": {
		"@geek/cache": "^1.0.2",
		"@geek/jwt": "^1.0.1",
		"@geek/retry": "^1.0.0",
		"@mobile/tinycolor2": "^1.4.1-2",
		"@titanium/authentication": "^1.0.1",
		"@titanium/authentication-oauth": "^1.0.13",
		"@titanium/bluebird": "^3.7.3",
		"@titanium/calendar-picker": "^1.0.0",
		"@titanium/deeply": "^1.0.4",
		"@titanium/errors": ">=0.0.2",
		"@titanium/identity": "^1.1.2",
		"@titanium/lottie": "^1.0.24",
		"@titanium/observer": "^0.0.3",
		"@titanium/permissions": "^1.0.2",
		"@titanium/please": "^1.0.11",
		"@titanium/screenshot": "^1.0.1",
		"@titanium/turbo": "^2.1.6",
		"@titanium/updater": "^1.0.1",
		"@titanium/webdialog": "^2.1.3"
	},
	"devDependencies": {
		"@geek/google-sheets": "^0.0.6",
		"@geek/spawn": "^0.0.3",
		"@titanium/eslint-config": "^0.0.18",
		"@titanium/plugin-turbo": "^1.0.6",
		"babel-plugin-search-and-replace": "^1.1.0",
		"babel-plugin-transform-remove-console": "^6.9.4",
		"bluebird": "^3.7.2",
		"cpy": "^8.1.1",
		"dargs": "^7.0.0",
		"del": "^6.0.0",
		"eslint": "^7.30.0",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-jsdoc": "^30.7.3",
		"eslint-plugin-promise": "^4.2.1",
		"fs-extra": "^9.0.1",
		"gm": "^1.23.1",
		"handlebars": "^4.7.6",
		"imagemagick": "^0.1.3",
		"lodash": "^4.17.20",
		"prettier": "^2.1.2",
		"titanium": ">=5.3.0"
	},
	"titanium": {
		"app_name": "Acme Office",
		"app_id": "acme.office.app",
		"ios_distribution_name": "iPhone Distribution: Acme Corporation",
		"provisioning_profile": "11111111-1111-1111-1111-111111111111",
		"appcenter_ios_distribution_group": "Collaborators",
		"appcenter_android_distribution_group": "Collaborators",
		"appcenter_ios_name": "acme/office-ios",
		"appcenter_android_name": "acme/office-android",
		"environment": "acme",
		"command": "appc ti",
		"ipa_name": "Acme Office.ipa",
		"url": "https://github.com/axway-developer-relations/griffin-app-opensource"
	}
}
